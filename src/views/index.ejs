<%- include('layout/header'); -%>
<link
  rel="stylesheet"
  href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css"
  integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA=="
  crossorigin=""
/>
<script
  type="text/javascript"
  src="<%= assets['/assets/demomap.js'] %>"
></script>
<div class="container section article-13">
  <div class="w-full mb-8">
    <img src="static/4mio.gif" class="h-64 block mx-auto" alt="" />
    <p class="text-center highlight text-xl"><%= __('index_thankyou') %></p>
  </div>
  <div class="flex flex-wrap">
    <div class="mt-3 md:w-2/3 lg:w-1/2">
      <h3><%= __('index_donate_title') %></h3>
      <p class="mt-3 "><%- __('index_donate_content') %></p>
    </div>
    <div
      class="w-full md:w-1/3 mb-4 md:mb-0 pr-2 flex align-center justify-center"
    >
      <img class="h-48" src="static/donate.png" alt="" />
    </div>
  </div>
</div>
<div class="container section article-13 flex flex-wrap">
  <div class="md:w-2/3 lg:w-1/2">
    <h3><%= __('article_title') %></h3>

    <p class="mt-3"><%- __('article_content1') %></p>
    <p class="mt-3"><%- __('article_content2') %></p>
    <p class="mt-3"><%- __('article_content3') %></p>
    <p class="mt-3"><%- __('article_content4') %></p>
    <p class="mt-3"><%- __('article_content5') %></p>
    <p class="mt-3"><%- __('article_content6') %></p>
    <p class="mt-3"><%- __('article_content7') %></p>
  </div>
  <div class="w-full md:w-1/2 mb-4 md:mb-0 pr-2 relative lg:p-6">
    <img
      src="static/poll-aber-so-ohne-hier-das-commission.png"
      class="w-full lg:w-2/3 lg:absolute lg:pin-y m-auto"
      alt=""
    />
  </div>
</div>
<div class="container section effects">
  <h2 class="mb-8"><%= __('index_prevented_header') %></h2>
  <div class="flex flex-wrap">
    <div
      class="w-full md:w-1/3 mb-4 md:mb-0 pr-2 flex align-center justify-center"
    >
      <img src="static/reddit.png" alt="" />
    </div>
    <div class="w-full md:w-1/2 flex flex-col justify-center">
      <h3>
        <%- __('index_reddit_title') %>
        <span class="text-blue-lighter">
          <%- __('index_reddit_title_highlight') %></span
        >
      </h3>
      <p><%- __('index_reddit_content') %></p>
    </div>
  </div>
  <div class="flex flex-wrap mt-16">
    <div
      class="w-full md:w-1/3 mb-4 md:mb-0 pr-2 flex align-center justify-center"
    >
      <img src="static/link.png" alt="" />
    </div>
    <div class="w-full md:w-1/2 flex flex-col justify-center">
      <h3>
        <%= __('index_link_title') %>
        <span class="text-blue-lighter">
          <%= __('index_link_title_highlight') %></span
        >
      </h3>
      <p><%= __('index_link_content') %></p>
    </div>
  </div>
</div>
<div class="container section twitter-feed">
  <div class="flex flex-wrap">
    <div class="w-full md:w-1/2 pr-4">
      <h3><%= __('index_twitter_title') %></h3>
      <p><%= __('index_twitter_description') %></p>
    </div>
    <div
      class="w-full md:w-1/2 pl-4 pr-2 flex flex-col items-center overflow-y-auto text-sm section-twitter"
    >
      <% if(locals.tweets) { %> <% locals.tweets.forEach(function(tweet){ %>
      <div
        class="container mx-auto tweet-container shadow-md mb-4 rounded-lg font-mono hidden"
        id="<%= tweet.id %>"
      >
        <div class="flex mb-4">
          <div class="md:w-1/4 p-4 text-center">
            <img
              class="w-2/3 h-2/3 rounded-full"
              src="<%= tweet.user.profile_image_url_https %>"
            />
          </div>

          <div class="md:w-3/4 p-4">
            <div class="">
              <span class=""
                ><a
                  class="underline"
                  target="_blank"
                  href="https://twitter.com/<%= tweet.user.screen_name %>"
                  >@ <%= tweet.user.screen_name %></a
                ></span
              >
              <span class="tweet-time">
                <%= moment(tweet.created_at, 'ddd MMM DD HH:mm:ss +ZZ YYYY',
                'en').locale(currLang).fromNow() %></span
              >
            </div>

            <div class="mt-2"><%= tweet.text %></div>
          </div>
        </div>
      </div>
      <% }); %> <% } %>
    </div>
  </div>
</div>
<div class="container section continue">
  <h2 class="mb-4"><%= __('index_continue_title') %></h2>
  <p><%= __('index_continue_content') %></p>
</div>
<div class="container section what-do">
  <h2 class="mb-4"><%= __('index_what_do_title') %></h2>
  <div class="section">
    <div class="flex flex-wrap">
      <div
        class="w-full md:w-1/5 mb-3 md:mb-0 md:pr-4 flex items-center justify-center"
      >
        <img class="w-24" src="static/Share.svg" alt="" />
      </div>
      <div class="w-full md:w-3/5">
        <p><%- __('index_what_do_content1') %></p>
        <p><%- __('index_what_do_content2') %></p>
      </div>
    </div>
  </div>
  <div class="section">
    <div class="flex flex-wrap flex-col-reverse md:flex-row">
      <div class="ml-auto w-full md:w-3/5 md:pr-4">
        <h3><%= __('index_dont_like_header') %></h3>
        <p><%= __('index_dont_like_content1') %></p>
        <a class="mt-3 inline-block btn btn-orange" href="/contact-your-mep">
          <%= __('index_contact_your_mep_title') %></a
        >
        <p class="mt-4"><%= __('index_dont_like_content2') %></p>
      </div>
      <div
        class="w-full md:w-1/5 mb-3 md:mb-0 md:pl-4 flex items-center justify-center"
      >
        <img class="w-24" src="static/Mail.svg" alt="" />
      </div>
    </div>
  </div>
</div>
<div class="container section voxel">
  <div class="text-center">
    <img class="w-full max-w-sm h-auto" src="static/voxel.png" alt="" />
  </div>
</div>
<div class="container section details">
  <div class="flex flex-wrap">
    <div class="w-full md:w-1/2 md:pr-4">
      <h3><%= __('index_art3_title') %></h3>
      <p><%= __('index_art3_content') %></p>
    </div>
    <div class="w-full md:w-1/2 md:pl-4">
      <h3><%= __('index_art11_title') %></h3>
      <p><%= __('index_art11_content') %></p>
    </div>
  </div>
</div>
<div class="container section details">
  <div class="flex flex-wrap">
    <div
      class="w-full md:w-1/2 md:pr-4 mb-3 md:mb-0 flex justify-center items-center"
    >
      <img class="w-64" src="static/scroll.png" alt="" />
    </div>
    <div class="w-full md:w-1/2 md:pl-4 flex flex-col justify-center">
      <h3><%= __('index_image_split_title') %></h3>
      <p><%= __('index_image_split_content') %></p>
    </div>
  </div>
</div>
<div class="container section call-to-action">
  <div class="m-auto w-full md:w-4/5 flex flex-wrap">
    <div class="w-full md:w-3/5 md:pr-4">
      <h2><%= __('index_petition_title') %></h2>
      <p>
        <%= __('index_petition_content1') %> <%- __('index_petition_content2')
        %>
      </p>
    </div>
    <div class="w-full md:w-2/5 md:pl-4 flex items-center justify-center">
      <a
        class="mt-3 md:mt-0 btn btn-orange inline-block"
        href="https://www.change.org/p/european-parliament-stop-the-censorship-machinery-save-the-internet?utm_source=share_petition&utm_medium=copylink&utm_campaign=share_petition"
      >
        <%= __('index_petition_button') %>
      </a>
    </div>
  </div>
</div>
<%- include('layout/footer') -%>
