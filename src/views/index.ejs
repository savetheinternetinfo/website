<%- include('layout/header'); -%>
<div class="container section article-13">
    <h2 class="text-5xl"><%= __('article') %> <span class="text-orange">13</span></h2>
    <h3><%= __('article_title') %></h3>

    <p class="mt-3 md:w-2/3 lg:w-1/2">
        <%- __('article_content') %>
    </p>
</div>
<div class="container section effects">
    <div class="flex flex-wrap">
        <div class="w-full md:w-1/3 mb-4 md:mb-0 pr-2 flex align-center justify-center">
            <img src="static/reddit.png" alt="">
        </div>
        <div class="w-full md:w-1/2 flex flex-col justify-center">
            <h3><%- __('article_reddit_title') %> <span class="text-blue-lighter"><%- __('article_reddit_title_highlight') %></span></h3>
            <p>
                <%= __('article_reddit_content') %>
            </p>
        </div>
    </div>
    <div class="flex flex-wrap mt-16">
        <div class="w-full md:w-1/3 mb-4 md:mb-0 pr-2 flex align-center justify-center">
            <img src="static/link.png" alt="">
        </div>
        <div class="w-full md:w-1/2 flex flex-col justify-center">
            <h3><%= __('article_link_title') %> <span class="text-blue-lighter"><%= __('article_link_title_highlight') %></span></h3>
            <p>
                <%= __('article_link_content') %>
            </p>
        </div>
    </div>
    <div class="flex flex-wrap mt-16">
        <div class="w-full md:w-1/3 mb-4 md:mb-0 pr-2 flex align-center justify-center">
            <img src="static/memes.png" alt="">
        </div>
        <div class="w-full md:w-1/2 flex flex-col justify-center">
            <h3><%= __('article_pepe_title') %> <span class="text-blue-lighter"><%= __('article_pepe_title_highlight') %></span></h3>
            <p>
                <%= __('article_pepe_content') %>
            </p>
        </div>
    </div>
</div>
<div class="container section twitter-feed">
    <div class="flex flex-wrap">
        <div class="w-full md:w-1/2 pr-4">
            <h3><%= __('twitter_title') %></h3>
            <p>
                <%= __('twitter_description') %>
            </p>
        </div>
        <div class="w-full md:w-1/2 pl-4 pr-2 flex flex-col items-center overflow-y-auto text-sm section-twitter">
            <% if(tweets) { %>
                <% tweets.forEach(function(tweet){ %>
                    <div class="container mx-auto tweet-container shadow-md mb-4 rounded-lg font-mono hidden" id="<%= tweet.id %>">
                        <div class="flex mb-4">

                            <div class="md:w-1/4 p-4 text-center">
                                <img class="w-2/3 h-2/3 rounded-full" src="<%= tweet.user.profile_image_url_https %>">
                            </div>

                            <div class="md:w-3/4 p-4">
                                <div class="">
                                    <span class=""><a class="underline" target="_blank" href="https://twitter.com/<%= tweet.user.screen_name %>">@<%= tweet.user.screen_name %></a></span>
                                    <span class="tweet-time"><%= moment(tweet.created_at, 'ddd MMM DD HH:mm:ss +ZZ YYYY', 'en').locale(currLang).fromNow() %></span>
                                </div>

                                <div class="mt-2">
                                    <%= tweet.text %>
                                </div>

                            </div>

                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>
<div class="container section countdown">
    <div class="flex flex-wrap">
        <div class="w-full md:w-2/3 pr-4">
            <h3><%= __('countdown_title') %></h3>
            <p>
                <%- __('countdown_description1') %>
            </p>
        </div>
        <div class="w-full md:w-1/3 pl-4 flex justify-center flex-col items-center">
            Countdown here!
        </div>
    </div>
</div>
<div class="container section what-do">
    <h2 class="mb-4"><%= __('what_do_title') %></h2>
    <div class="section">
        <div class="flex flex-wrap">
            <div class="w-full md:w-1/5 mb-3 md:mb-0 md:pr-4 flex items-center justify-center">
                <img class="w-24" src="static/Share.svg" alt="">
            </div>
            <div class="w-full md:w-3/5">
                <h3><%= __('what_do_share') %></h3>
                <p><%- __('what_do_share_content') %></p>
                <h3><%= __('what_do_need_content') %></h3>
                <p>
                    <%- __('what_do_gallery') %>
                </p>
            </div>
        </div>
    </div>
    <div class="section">
        <div class="flex flex-wrap flex-col-reverse md:flex-row">
            <div class="ml-auto w-full md:w-3/5 md:pr-4">
                <h3><%= __('what_do_mail') %></h3>
                <p>
                    <%= __('what_do_stuff') %>
                </p>
                <p>
                    <%= __('what_do_mail_content') %>
                </p>
                <select class="bg-orange p-4 border-none rounded-full">
                    <option value="-"><%= __('select_country') %></option>
                </select>
            </div>
            <div class="w-full md:w-1/5 mb-3 md:mb-0 md:pl-4 flex items-center justify-center">
                <img class="w-24" src="static/Mail.svg" alt="">
            </div>
        </div>
    </div>
</div>
<div class="container section voxel">
    <div class="text-center">
