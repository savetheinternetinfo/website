<%
    String.prototype.capitalize = function(){
        return this.charAt(0).toUpperCase() + this.slice(1);
    }
%>
<!DOCTYPE html>
<html class="h-full">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% if (currentRoute.replace(/\//g, "") == ""){ %>
    <title>Save the Internet</title>
    <% } else { %>
    <title><%= currentRoute.replace(/\-/g, " ").capitalize() %> | Save the Internet</title>
    <% } %>
    <link rel="stylesheet" href="<%= assets['/assets/main.css'] %>"/>
    <% languages.forEach((language) => { %>
        <% if(language != currentLanguage) { %><link rel="alternate" href="<%= `/${currentRoute}?lang=${language}` %>" hreflang="<%= language %>"><% } %>
    <% }); %>
    <base href="/" >
</head>
<body class="bg-blue text-white h-full flex flex-col">
<header class="z-50 flex flex-no-wrap justify-between bg-blue w-full shadow fixed">
    <div class="share-container flex flex-no-wrap ml-2">
        <a class="nav-link mr-1" href="https://www.facebook.com/Savetheinternet.info/"><i class="fa fa-facebook-square"></i></a>
        <a class="nav-link mr-1" href="https://twitter.com/fckart13"><i class="fa fa-twitter"></i></a>
        <a class="nav-link mr-0" href="https://www.instagram.com/savetheinternetpetition/"><i class="fa fa-instagram"></i></a>
    </div>
    <nav class="hidden sm:block flex-1 container">
        <ul class="flex navbar flex-no-wrap list-reset m-0 p-0">
            <li><a class="nav-link" href="/about-us">About Us</a></li>
            <li><a class="nav-link" href="/gallery"><%= __('gallery_title') %></a></li>
            <li><a class="nav-link" href="/about"><%= __('about_title') %></a></li>
        </ul>
    </nav>
    <div class="language-picker mr-2">
        <a class="cursor-pointer nav-link pr-4 mr-0 lang-trigger"><%= currentLanguage.toUpperCase() %></a>
        <menu class="hidden absolute w-full bg-blue shadow-md m-0 p-0 pr-2">
            <ul class="flex flex-wrap justify-end w-full list-reset">
                <% languages.forEach((language) => { %>
                <li><a class="nav-link mb-2 mr-0 ml-2" href="/<%= currentRoute %>?lang=<%= language %>"><%= language.toUpperCase() %></a></li>
                <% }); %>
            </ul>
        </menu>

    </div>
</header>
<div class="hero pt-8 flex items-center justify-center flex-col mt-4">
    <div class="tilt text-2xl md:text-title m-4 bg-white p-4">
        <div class="untilt">
                <a class="text-blue hover:text-blue font-bold" href="/">Save <span id="head-typer" class="font-hairline">the</span>Internet</a>
        </div>
    </div>
    <p class="text-xl px-2 text-center"><%= __('header_tagline') %></p>
    <a class="btn btn-orange mt-3" target="_blank" href="https://www.change.org/p/european-parliament-stop-the-censorship-machinery-save-the-internet"><%= __('sign_petition') %></a>
</div>
